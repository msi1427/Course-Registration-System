<p id="notice"><%= notice %></p>

<h1>Courses</h1>
<br/>
<div id="new_course">
  <% if current_user.role=="Admin" %>
  <%= link_to 'Add New Course', new_course_path %> <br/><br/>
  <%end %>
</div>
<table>
    <thead>
        <td>Course Title</td>
        <td>Course Number</td>
        <td>Department</td>
        <td>Semester</td>
        <td>Credit</td>
        <td> </td>
    </thead>
  <tbody>
    <% @courses.each do |course| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= course.title %></td>
        <td><%= course.number %></td>
        <td><%= course.department %></td>
        <td><%= course.semester %></td>
        <td><%= course.credit %></td>
      <td class="list_actions">
        <%= link_to 'Show', course %> <br/>
        <% if current_user.role=="Admin" %>
        <%= link_to 'Edit', edit_course_path(course) %> <br/>
        <%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>