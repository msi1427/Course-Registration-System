<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div id="new_user">
  <%= link_to 'Add New User', new_user_path %>
</div>
<table>
  <thead>
  <tr>
    <th> Name </th>
    <th> ID </th>
    <th> Department </th>
    <th> Semester </th>
    <th> Email</th>
    <th> Role </th>
    <th> CGPA </th>
    <th> Photo </th>
    <th> </th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td><%= user.name %></td>
      <td><%= user.std_id %></td>
      <td><%= user.department %></td>
      <td><%= user.semester %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td><%#= user.cgpa %></td>
      <td><%#= #user.photo %></td>

      <td class="list_actions">
        <%= link_to 'Show', user %> <br/>
        <%= link_to 'Edit', edit_user_path(user) %> <br/>
        <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>


